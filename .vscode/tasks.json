{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PSoC Config",
            "type": "shell",
            "args": [ "${workspaceRoot}/design/design.modus" ],
            "options": {
                "cwd": "${workspaceRoot}/design"
            },
            "windows": { 
                "command": "${env:ONETHINX_PACK_FOLDER}/tools_2.0/device-configurator/device-configurator"
            },
            "linux": { 
                "command": "${env:ONETHINX_PACK_FOLDER}/tools_2.0/device-configurator/device-configurator"
            },
            "osx": {
                "command": "${env:ONETHINX_PACK_FOLDER}/tools_2.0/device-configurator/device-configurator"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },      
        {
            "label": "PDL 1.3.1.1499 documentation",
            "type": "shell",
            "command": "open",
            "args": ["${env:ONETHINX_PACK_FOLDER}/PDL_1.3.1.1499/docs/pdl_api_reference_manual.html"],
        },
        {
            "label": "Check build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "windows": {
                "command": "${env:ONETHINX_PACK_FOLDER}/config/scripts/check_build.bat ${workspaceFolderBasename}"
            },
            "linux": {
                "command": "${env:ONETHINX_PACK_FOLDER}/config/scripts/check_build.bash ${workspaceFolderBasename}"
            },
            "osx": {
                "command": "${env:ONETHINX_PACK_FOLDER}/config/scripts/check_build.bash ${workspaceFolderBasename}"
            }
        }
    ]
}